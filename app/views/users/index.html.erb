<h2 class="inline">Users</h2>
<%= render 'shared/search', path_for_search: users_path, placeholder: "User Email" %>
<table class="table table-striped">
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Permitted?</th>
    <th>Admin?</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= mail_to user.email, user.email %></td>
    <td><%= user.permitted %></td>
    <td><%= user.admin %></td>
    <td>
      <%= link_to edit_user_path(user), class: "btn btn-info", role: "button" do %>
        <span class='glyphicon glyphicon-pencil' aria-hidden='true'></span>
      <% end %>
    </td>
    <td>
      <%= link_to user_path(user), class: "btn btn-warning", role: "button", method: :delete, data: {confirm: "Really delete?"} do %>
        <span class='glyphicon glyphicon-trash' aria-hidden='true'></span>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<%= page_entries_info @users %>
<br />
<%= paginate @users %>
