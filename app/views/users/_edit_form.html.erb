<%= bootstrap_form_for @user do |f| %>
<%= f.text_field :name %>
<%= f.email_field :email %>
<%= f.password_field :password %>
<%= f.select :permitted, [true, false] %>
<%= f.select :admin, [true, false] %>
<%= link_to "Cancel", :back, class: "btn btn-default", role: "button" %>
<%= f.primary %>
<% end %>
